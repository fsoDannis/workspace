package com.dannis.inventorymanager;

import java.util.ArrayList;

import android.os.Bundle;
import android.app.Activity;
import android.util.Log;
import android.view.Menu;
import android.widget.EditText;
import android.widget.TextView;

import com.dannis.inventorymanager.models.InventoryItem;
import com.dannis.inventorymanager.models.ItemType;
public class MainActivity extends Activity {

	private TextView _thisText;
	private EditText _etProductName;
	private EditText _etProductPrice;
	private EditText _etProductQty;
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);
		
		_etProductName = (EditView)findViewById(R.id.etProductName);
		_etProductPrice = (EditView)findViewById(R.id.etProductPrice);
		_etProductQty = (EditView)findViewById(R.id.etProductQty);
		
		
		InventoryItem nikeShoe = new InventoryItem();
		nikeShoe.setName("AirMax");
		nikeShoe.setPrice(119.99);
		nikeShoe.setQty(10);
		nikeShoe.setItemType(ItemType.Shoe);
		
		InventoryItem newBal = new InventoryItem();
		newBal.setName("Trek");
		newBal.setPrice(119.99);
		newBal.setQty(20);
		newBal.setItemType(ItemType.Shoe);
		
		InventoryItem adidas = new InventoryItem();
		adidas.setName("Fast");
		adidas.setPrice(319.99);
		adidas.setQty(4);
		adidas.setItemType(ItemType.Shoe);
		
		InventoryItem puma = new InventoryItem();
		puma.setName("Tiger");
		puma.setPrice(9.99);
		puma.setQty(300);
		puma.setItemType(ItemType.Pants);
		
		ArrayList<InventoryItem> inventoryCollection = new ArrayList<InventoryItem>();
		inventoryCollection.add(nikeShoe);
		inventoryCollection.add(newBal);
		inventoryCollection.add(adidas);
		inventoryCollection.add(puma);
		
		
		for(InventoryItem thisItem : inventoryCollection)
		{
			_thisText.setText(_thisText.getText() + " " + thisItem.toString() + "\n\n");
		}
		
		//Log.i("Dannis",nikeShoe.toString());
		
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.activity_main, menu);
		return true;
	}

}
